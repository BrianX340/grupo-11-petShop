</body>
<script>
    document.addEventListener('click', (event) => {
        try {
            elementId = event.path[0].id
            elementClass = event.path[0].className
        } catch {
            elementId = event.target.id
            elementClass = event.path[0].className
        }

        switch (elementId) {
            case 'promotionSelect':
            case 'backPromotionSelect':
                promotionShowToggle()
                break
            default:
                break;
        }
    })

    function promotionShowToggle() {
        let addPromotionOptions = document.getElementById('addPromotionOptions')
        if (addPromotionOptions.style.display == 'none') {
            addPromotionOptions.style.display = 'flex'
        } else {
            addPromotionOptions.style.display = 'none'
        }
    }
</script>

