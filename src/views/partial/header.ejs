<%- include('./menuLateral'); %>
    <div class='navPlaceTop'></div>
    <header id='header-invited'>
        <nav id='nav-mobile'>
            <div class='nav-top'>
                <div class='mobile menu-container'>
                    <figure class='menu-button'><img id='menu-button' src="/img/icon_menu_mobile_lateral.svg" alt="">
                    </figure>
                </div>
                <div class='logo-desktop desktop'>
                    <a href="/">
                        <figure class="figure-logo">
                            <img src="/img/logo.svg" alt="">
                        </figure>
                    </a>
                </div>
                <div class='nav-top-input-container'>
                    <input id='busqueda' placeholder='Buscar algo...' type="text">
                </div>

                <div class='desktop'>
                    <!-- start nav -->
                    <nav id="menu-nav">
                        <!-- start menu -->
                        <div class="nav-desplegable">
                            <% if (session.user) { %>
                                <ul>
                                    <li>
                                        <a href="#">
                                            <%= session.user %>
                                        </a>
                                        <ul>
                                            <li class="li-menu"><a href="/ps/profile">Mi perfil</a></li>
                                            <li class="li-menu"><a href="/ps/logout">Cerrar sesi√≥n</a></li>
                                            
                                        </ul>
                                    </li>
                                </ul>

                                <% } else { %>
                                    <ul>
                                        <li><a href="#">Cuenta</a>
                                            <ul>
                                                <li class="li-menu"><a href="/ps/login">Iniciar sesion</a></li>
                                                <li class="li-menu"><a href="/ps/register">Registrarse</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                <% } %>

                        </div>

                        <!-- end menu -->
                    </nav>
                    <!-- end nav -->
                </div>



                <div>
                    <figure class='carrito-button-container'><img id='carrito-button' src="/img/icon_carrito.svg"
                            alt=""></figure>
                </div>
            </div>
        </nav>
    </header>
    <script>
        //Al presionar enter en el input realiza la busqueda
        document.getElementById('busqueda').addEventListener('keypress', (event) => {
            if (event.key == 'Enter' || event.keyCode == 13) {
                keyToSearch = document.getElementById('busqueda').value //aca obtenemos el texto escrito en el input
                window.location.href = `${window.location.origin}/search/${keyToSearch}` //redireccionamos a la api de busqueda
            }
        })
    </script>