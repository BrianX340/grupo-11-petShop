<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/users/profile.css">
    <title>Perfil</title>
</head>

<body class="userProfileBody">
    <%- include('../partial/header'); %>



        <main class="userProfile">
            <div class="avatar">
                <img src="/img/avatars/<%= data.session.user.avatar.path %>" alt="">
            </div>
            <div class="userProfile-container">
                <section class="userName_box">

                </section>

                <section class="boxUserProfile">
                    <div class="userProfileBox">
                        <h3 class="userProfileTitle">Datos personales:</h3>
                        <p class="userProfileItem">Nombre:
                            <%= data.session.user.name %>
                        </p>
                        <p class="userProfileItem">Apellido:
                            <%= data.session.user.last_name %>
                        </p>
                        <p class="userProfileItem">Email:
                            <%= data.session.user.email %>
                        </p>
                        <p class="userProfileItem">Teléfono:
                            <%= data.session.user.tel ? data.session.user.tel : "------" %>
                        </p>
                    </div>
                    <div class="userProfileBox">
                        <h3 class="userProfileTitle">Datos de contacto:</h3>
                        <p class="userProfileItem">Dirección:
                            <%= data.session.user.address ? data.session.user.address : "------" %>
                        </p>
                        <p class="userProfileItem">Código postal:
                            <%= data.session.user.cp ? data.session.user.cp : "------" %>
                        </p>
                        <p class="userProfileItem">Provincia:
                            <%= data.session.user.province ? data.session.user.province : "------" %>
                        </p>
                        <p class="userProfileItem">Localidad:
                            <%= data.session.user.city ? data.session.user.city : "------" %>
                        </p>
                    </div>
            </div>

            </section>

            <section>
                <div class="boxExtra">
                    <div class="favoriteProfile">
                        <h1>Proximamente...</h1>
                    </div>
                    <div class="favoriteProfile">
                        <h1>Proximamente...</h1>
                    </div>
                </div>
            </section>

            <a href="/ps/profile/edit/<%= data.session.user.id %>" class="btn btn-ad-primary">EDITAR DATOS</a>
            </div>
        </main>

        <%- include('../partial/footer'); %>

</body>

</html>