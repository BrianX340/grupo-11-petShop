<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/users/profile.css">
    <title>Perfil</title>
</head>

<body class="userProfileBody">
    <%- include('../partial/header'); %>



        <main class="userProfile">
            <section class="userInfo">
                <div class="avatar">
                    <img src="/img/avatars/<%= user.avatar %>" alt="">
                </div>
                <div class="userProfile-container">
                    <section class="userName_box">

                    </section>

                    <section class="box_userProfile">
                        <div class="userProfileBox">
                            <h3 class="userProfileTitle">Datos personales:</h3>
                            <p class="userProfileItem">Nombre: <%= user.name %>
                            </p>
                            <p class="userProfileItem">Apellido: <%= user.last_name %>
                            </p>
                            <p class="userProfileItem">Email: <%= user.email %>
                            </p>
                            <p class="userProfileItem">Teléfono: <%= user.tel ? user.tel : "------" %>
                            </p>
                        </div>
                        <div class="userProfileBox">
                            <h3 class="userProfileTitle">Datos de contacto:</h3>
                            <p class="userProfileItem">Dirección: <%= user.address ? user.address : "------" %>
                            </p>
                            <p class="userProfileItem">Código postal: <%= user.pc ? user.pc : "------" %>
                            </p>
                            <p class="userProfileItem">Provincia: <%= user.province ? user.province : "------" %>
                            </p>
                            <p class="userProfileItem">Localidad: <%= user.city ? user.city : "------" %>
                            </p>
                        </div>
                    </section>
                    <div class="btnProfile">
                        <a href="/ps/profile/edit/<%= user.id %>" class="btn btn-ad-primary">Editar Datos</a>
                    </div>
                    
                </div>
            </section>
            <section>
                <div class="boxExtra">
                    <div class="favoriteProfile">
                        <h1>Proximamente...</h1>
                    </div>
                    <div class="favoriteProfile">
                        <h1>Proximamente...</h1>
                    </div>
                </div>
                
            </section>

        </main>

        <%- include('../partial/footer'); %>

</body>

</html>