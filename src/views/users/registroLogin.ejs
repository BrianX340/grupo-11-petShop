<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/users/forms.css">
    <title>Forms</title>
</head>

<body id="body">
    
    <%- include('../partial/header-invited'); %>

 

    <section class="container-form">
        <div class="container">
            <div class="user singinBox">
                <div class="imgBx"><img class="imgBx-img" src="https://estaticos.muyinteresante.es/uploads/images/article/570b65e55bafe88a438b456a/perro_0.jpg"></div>
                <div class="formBx">
                    <form method="POST">
                        <h2>Inicio de Sesion</h2>
                        <input id="input-user" name="user" type="text" placeholder="Usuario">
                        <% if (locals.errors && errors.user) { %>
                            <small class="text-danger"><%= errors.user.msg %> </small>
                        <% } %>
                        <input id="input-password" type="password" name="pass" placeholder="Contraseña">
                        <% if (locals.errors && errors.pass) { %>
                            <small class="text-danger"><%= errors.pass.msg %> </small>
                        <% } %>
                        <input type="submit" value="Iniciar sesion">
                        <p class="signup">¿No tienes cuenta? <a href="#" onclick="toggleForm();"> Obtén una cuenta.</a></p>
                    </form>
                </div>
            </div>

            <div class="user singupBox">
                <div class="formBx">
                    <form method="POST">
                        <h2>Registrate</h2>
                        <input type="text" name="user1" placeholder="Usuario">
                        <% if (locals.errors && errors.user1) { %>
                            <small class="text-danger"><%= errors.user1.msg %> </small>
                        <% } %>
                        <input type="text" name="name1" placeholder="Nombre">
                        <% if (locals.errors && errors.name1) { %>
                            <small class="text-danger"><%= errors.name1.msg %> </small>
                        <% } %>
                        <input type="text" name="last_name1" placeholder="Apellido" <%= locals.old && old.last_name1 %>>
                        <% if (locals.errors && errors.last_name1) { %>
                            <small class="text-danger"><%= errors.last_name1.msg %> </small>
                        <% } %>
                        <input id="input-email" type="email1" name="email" placeholder="Correo electronico">
                        <% if (locals.errors && errors.email1) { %>
                            <small class="text-danger"><%= errors.email.msg %> </small>
                        <% } %>
                        <input id="input-password" type="password" name="pass1" placeholder="Contraseña">
                        <% if (locals.errors && errors.pass1) { %>
                            <small class="text-danger"><%= errors.pass1.msg %> </small>
                        <% } %>
                        <input type="password" name="pass2" placeholder="Reingrese la contraseña">
                        <% if (locals.errors && errors.pass2) { %>
                            <small class="text-danger"><%= errors.pass2.msg %> </small>
                        <% } %>
                        <input type="submit" value="Registrarse">
                        <p class="signup">¿Ya tiene cuentra? <a href="#" onclick="toggleForm();"> Inicie sesion.</a></p>
                    </form>
                </div>
                <div class="imgBx"><img class="imgBx-img" src="/img/gato-forms.jpg"></div>
            </div>
        </div>
    </section>

    <%- include('../partial/footer'); %>

    <script>
        function toggleForm(){
            section = document.querySelector('section');
            container = document.querySelector('.container');
            container.classList.toggle('active');
            section.classList.toggle('active');
        }
    </script>
</body>

</html>