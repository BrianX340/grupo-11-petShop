<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito</title>
    <link rel="stylesheet" href="/css/users/carritoPage.css">
</head>
<body>
    <%- include('../partial/header'); %>
    
    <section class='articulos-productos'>
        <div class='section-box'>
            <!--Contenedor de articulos-->
            <div id='articulos' class='carrito-body'> 
                <div class='carrito-item'>
                    <div>
                        <div class='item-image-container'>
                            <figure class='item-figure'><img src="/img/item-test.png" alt=""></figure>
                        </div>
                        <div class='item-description-container'>
                            <div class="item-title"><span>Alimento marca X</span></div>
                            <div class="item-description"><span>Alimento para perro :v</span></div>
                        </div>
                        <div class='price-amount'>
                            <span>$20,99</span>
                            <div class='amount-controls'>
                                <div class='amount-put'>-</div>
                                <input class='amount' name="amount" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" type = "number" maxlength = "3"/>
                                <div class='amount-add'>+</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class='carrito-item'>
                    <div>
                        <div class='item-image-container'>
                            <figure class='item-figure'><img src="/img/item-test.png" alt=""></figure>
                        </div>
                        <div class='item-description-container'>
                            <div class="item-title"><span>Alimento marca X</span></div>
                            <div class="item-description"><span>Alimento para perro :v</span></div>
                        </div>
                        <div class='price-amount'>
                            <span>$20,99</span>
                            <div class='amount-controls'>
                                <div class='amount-put'>-</div>
                                <input class='amount' name="amount" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" type = "number" maxlength = "3"/>
                                <div class='amount-add'>+</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Fin Contenedor de articulos-->
            <div class="agregar-mas">
                <span>+ Agregar productos</span>
            </div>
        </div>
        <div class='subtotal'>
            <div>
                <span>Subtotal: $<span>999.99</span></span>
            </div>
        </div>
    </section>
    <section class='buy-box'>
        <div>
            <div>
                <div class='box-info'>
                    <span>$<span id='totalizado'>999.99</span></span>
                    <span id='cant-products'>2 Productos</span>
                </div>
            </div>
            <div class='button-buy-container'>
                <button>Comprar</button>
            </div>
        </div>
    </section>

    <%- include('../partial/footer'); %>
</body>
<script src="/js/menu-mobile.js"></script>
<script src="/js/carritoPage.js"></script>
</html>