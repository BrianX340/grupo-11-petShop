<section id='ingresar-registrarse-component'>
    <section class="container-form">
        <div class="container">
            <div class="user singinBox">
                <div class="imgBx"><img src="https://estaticos.muyinteresante.es/uploads/images/article/570b65e55bafe88a438b456a/perro_0.jpg"></div>
                <div class="formBx">
                    <form>
                        <h2>Inicio de Sesion</h2>
                        <input id="input-user" type="text" placeholder="Usuario">
                        <input id="input-password" type="password" placeholder="Contraseña">
                        <input type="submit" value="Iniciar sesion">
                        <p class="signup">¿No tienes cuenta? <a onclick="toggleForm();"> Obtén una cuenta.</a></p>
                    </form>
                </div>
            </div>

            <div class="user singupBox">
                <div class="formBx">
                    <form>
                        <h2>Registrate</h2>
                        <input type="text" placeholder="Usuario">
                        <input id="input-email" type="email" name="email" placeholder="Correo electronico">
                        <input id="input-password" type="password" placeholder="Contraseña">
                        <input type="password" placeholder="Reingrese la contraseña">
                        <input type="submit" value="Registrarse">
                        <p class="signup">¿Ya tiene cuentra? <a onclick="toggleForm();"> Inicie sesion.</a></p>
                    </form>
                </div>
                <div class="imgBx"><img src="/img/gato-forms.jpg"></div>
            </div>
        </div>
    </section>
    <script>
        function toggleForm(){
            section = document.querySelector('section');
            container = document.querySelector('.container');
            container.classList.toggle('active');
            section.classList.toggle('active');
        }
    </script>
</section>